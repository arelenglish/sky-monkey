<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@customer.errors.count, "error",) %> present:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <form>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'Name', for: 'customer name', value: session[:customer]["name"] %>
    </div>
    <div class="form-group">
      <%= f.label :email, 'Email Address' %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'email', for: 'customer email', value: session[:customer]["email"] %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-12 text-center">
      <%= f.submit 'Continue to Select Tickets', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  </form>
<% end %>
